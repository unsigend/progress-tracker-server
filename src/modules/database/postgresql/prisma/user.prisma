/*
 * User role enum
 * @description User role enum which is used to store the user role.
*/
enum UserRole {
  ADMIN
  USER
}

/*
 * User model
 * @description User model which is used to store the user information.
*/
model User {
  // primary key
  id        String   @id @default(uuid())

  // fields
  username  String   
  email     String   @unique
  password  String
  avatarUrl String?
  provider  String[] @default(["local"])
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  // relation
  userBooks UserBook[]
  courses Course[]
  userCourses UserCourse[]
  createdBooks Book[] @relation("CreatedBooks")
}
